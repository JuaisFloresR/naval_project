generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Ship {
  id        String      @id @default(uuid())
  name      String
  type      String
  length    Decimal     @db.Decimal(10,2)
  width    Decimal     @db.Decimal(10,2)
  height    Decimal     @db.Decimal(10,2)
  description String
  status    String  @default("ACTIVE")
  createdAt DateTime    @default(now())

  parts     Part[]
  rows      RowShip[]
}

/// Possible statuses for a Ship
enum ShipStatus {
  ACTIVE
  RETIRED
  UNDER_REPAIR
}

model RowShip {
  id        String   @id @default(uuid())
  /// Measurement 1 (define actual meaning)
  value1    Decimal
  /// Measurement 2
  value2    Decimal
  /// Measurement 3
  value3    Decimal
  /// Measurement 4
  value4    Decimal
  /// Measurement 5
  value5    Decimal
  /// Measurement 6
  value6    Decimal
  /// Measurement 7
  value7    Decimal
  /// Measurement 8
  value8    Decimal
  /// Measurement 9
  value9    Decimal
  /// Measurement 10
  value10   Decimal
  /// Measurement 11
  value11   Decimal

  createdAt DateTime @default(now())
  shipId    String
  ship      Ship     @relation(fields: [shipId], references: [id])
}

model Part {
  id        String   @id @default(uuid())
  name      String
  description String
  shipId    String
  ship      Ship     @relation(fields: [shipId], references: [id])
  rows      RowPart[]
}

model RowPart {
  id        String   @id @default(uuid())
  /// Measurement 1 (define actual meaning)
  value1    Decimal
  /// Measurement 2
  value2    Decimal
  /// Measurement 3
  value3    Decimal
  /// Measurement 4
  value4    Decimal
  /// Measurement 5
  value5    Decimal
  /// Measurement 6
  value6    Decimal
  /// Measurement 7
  value7    Decimal
  /// Measurement 8
  value8    Decimal
  /// Measurement 9
  value9    Decimal
  /// Measurement 10
  value10   Decimal
  /// Measurement 11
  value11   Decimal

  createdAt DateTime @default(now())
  partId    String
  part      Part     @relation(fields: [partId], references: [id])
}


