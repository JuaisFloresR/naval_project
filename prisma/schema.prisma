generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Ship {
  id        String   @id @default(uuid())
  name      String
  type      String
  builtYear Int
  status    String   @default("active") // e.g. active, retired, under_repair
  createdAt DateTime @default(now())
  parts Parts[]

  
}

model Parts {
  id     String @id @default(uuid())
  name   String
  shipId String      // foreign key
  ship   Ship @relation(fields: [shipId], references: [id])
}
